@model Ex2.Models.Comment

@Scripts.Render("~/bundles/jquery")

<script type="text/javascript">
    $(document).ready(function () {
        $("#addComment").click(function (e) {
            e.preventDefault();

            var title = document.getElementById('title').value;
            var authorName = document.getElementById('authorName').value;
            var authorSiteURL = document.getElementById('authorSiteURL').value;
            var content = document.getElementById('content').value;

            if (title == '' || authorName == '' || authorSiteURL == '' || content == '') {
                alert('fill all fields');
                return;
            }

            var token = $('[name=__RequestVerificationToken]').val();
            var commentData = {
                PostID: @Model.PostID,
                Title: title,
                AuthorName: authorName,
                AuthorSiteURL: authorSiteURL,
                Content: content
            };
            commentData['__RequestVerificationToken'] = token;

            $.ajax({
                url: "/Comments/Create",
                type: "POST",
                data: commentData,
                success: function (response) {
                    window.location.reload();
                },
                error: function (response) {
                    alert('Error was occured, please try again later')
                }

            });

        });
    });
</script>


    
    <div class="form-horizontal">
    </div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel  panel-default">
        <div class="panel-body">
            <div class="form-group">
                <input id="authorName" class="col-md-4 col-lg-offset-1" type="text" placeholder="Your Name" />
                <input id="authorSiteURL" class="col-md-4 col-lg-offset-1" type="text" placeholder="Your Site URL" />
            </div>
            <br />
            <div class="form-group">
                <input id="title" class="col-md-4 col-lg-offset-1" type="text" placeholder="Title" />
                <textarea id="content" class="col-md-4 col-lg-offset-1" type="text" placeholder="Content"></textarea>
            </div>
        </div>
        
        <div class="panel-footer">
            <input class="btn btn-search-posts" type="submit" id="addComment" value="Post Comment" />
        </div>
        
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}